
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>
<link href="https://demo.dashboardpack.com/architectui-html-free/main.css" rel="stylesheet">

<section class="conatainer">
    <div class="row justify-content-center">
        <div class="col-md-8 col-12 p-5">
            <div class="main-card mb-3 card">
                <div class="card-header">USERS
                    <div class="btn-actions-pane-right">
                        <div role="group" class="btn-group-sm btn-group">
                            <button class="active btn btn-focus" onclick="activeUsers()">ACTIVE</button>
                            <button class="btn btn-focus" onclick="blockedUsers()">BLOCKED </button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover" id="myTable" >
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th>Name</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">City</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td class="text-center text-muted">{{@index}}</td>
                                <td>
                                    <div class="widget-content p-0">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left mr-3">
                                                <div class="widget-content-left">
                                                    <img width="40" height="40" class="rounded-circle"
                                                        src="/images/user_images/4.jpg" alt="">
                                                </div>
                                            </div>
                                            <div class="widget-content-left flex2">
                                                <div class="widget-heading">{{this.firstName}}</div>
                                                <div class="widget-subheading opacity-7">{{this.lastName}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">{{this.email}}</td>
                                <td class="text-center">{{this.country}}</td>
                                <td class="text-center">
                                    {{#if this.block}}
                                    <div class="badge badge-warning">BLOCKED</div>
                                    {{else}}
                                    <div class="badge badge-warning">ACTIVE</div>
                                    {{/if}}
                                </td>

                                <td class="text-center">
                                    <a type="button" id="PopoverCustomT-1" class="btn btn-primary "
                                        href="/admin/updateUserData?id={{this._id}}&name={{this.firstName}}">EDIT</a>

                                    {{#if this.block}}
                                    <button class="ml-2 btn-wide btn btn-warning "
                                        onclick="blockFunc('{{this._id}}','{{this.email}}','unblock') ">UNBLOCK</button>
                                    {{else}}
                                    <button class="ml-2 btn-wide btn btn-warning "
                                        onclick="blockFunc('{{this._id}}','{{this.email}}','block') ">BLOCK</button>
                                    {{/if}}
                                    <button class="ml-2 btn-icon btn-icon-only btn btn-outline-danger "
                                        onclick="removeUser('{{this._id}}','{{this.email}}')"><i
                                            class="pe-7s-trash btn-icon-wrapper"> </i></button>

                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="d-block text-center card-footer">

                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript"
    src="https://demo.dashboardpack.com/architectui-html-free/assets/scripts/main.js"></script>
<script src="/javascripts/ajax.js"> </script>

