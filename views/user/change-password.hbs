<script>
    function comparePassword(){
        let password = document.getElementById('newPassword').value ;
        let confirmPassword = document.getElementById('confirmPassword').value;

        if(password != confirmPassword){
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'Use same password'
            document.getElementById('change-password').disabled = true;
        } else {
            document.getElementById('message').style.color = 'green';
            document.getElementById('message').innerHTML = 'Password Confirmed'
            document.getElementById('change-password').disabled = false ;
        }
    }
</script>



