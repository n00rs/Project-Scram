                <input type="password" id="newPassword" name="newPassword" class="form-control" style="display:none ;" minlength=7 placeholder="Enter new password" onkeyup= "comparePassword( )" required>
                </div>
                  <div id="" class=" d-flex form-group flex-row justify-content-center mt-2">
                
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"  minlength=7 style="display:none;" placeholder="confirm new password" onkeyup= "comparePassword( )" required>
