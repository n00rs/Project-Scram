              <tr scope="row ">
                  <div class="d-flex align-items-center">
                    <img src="/images/product_images/{{this.item}}_1.jpg" class="img-fluid rounded-3"
                      style="width: 75px;" alt="Book">
                    <div class="flex-column ms-4">
                      <p class="mb-0">{{this.name}}</p>
                      <p class="mb-0">{{this.subcategory}}</p>
                      <p class="mb-0">size:
                         
                         <select name="size" id="" required>
                          <option>Select</option>
                          {{#each this.size}}
                          
                          <option value="{{this}}">{{this}}</option>
                      {{/each}}    
                      </select>
                      </p>
                      <p class="mb-0">quantity: {{this.quantity}}</p>

                    </div>
                  </div>
                </tr>
                {{/each}}
