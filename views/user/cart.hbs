<script src="/javascripts/ajax.js"></script>


<section class="h-100 h-custom">
  <div class="container h-100 py-5">
    <div class="row d-flex r  h-100">
      <div class="col-12 col-md-7">

        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th class="h5">SHOPPING CART</th>
               
              </tr>
            </thead>
            <tbody>
                {{#each cartItems.products}}
              <tr>
                <th scope="row">
                  <div class="d-flex align-items-center">
                    <img src="/images/product_images/{{this.item}}_1.jpg" class="img-fluid rounded-3"
                      style="width: 120px;" alt="img">
                    <div class="flex-column ms-4">
                      <p class="mb-0">{{this.name}}</p>
                      <p class="mb-0">{{this.subcategory}}</p>
                    </div>
                  </div>
                </th>
                <td class="align-middle">
                  <p class="e-auto" style="font-weight: 500;">{{this.category}}</p>
                </td>
                <td class="align-middle">
                  <div class="d-flex flex-row">
                    <button class="btn btn-link "
                      onclick="changeQuantity('{{this.item}}','{{../cartItems._id}}',-1)">
                      <i class="fas fa-minus"></i>
                    </button>
                    <span id={{this.item}} class="mt-2">{{this.quantity}}</span>

                    <button class="btn btn-link px-2"
                      onclick="changeQuantity('{{this.item}}','{{../cartItems._id}}',1)">
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                </td>
                <td class="align-middle">
                  <m class="" style="font-weight: 500;">&#8377; {{this.price}}</m>
                </td>
                <td>
                  <a onclick="removeItem('{{../cartItems._id}}','{{this.item}}','{{this.name}}',)"><i class="fa-regular fa-circle-xmark fs-5 text-danger"></i></a>
                </td>
              </tr>
             {{/each}}
            </tbody>
          </table>
        </div>
        </div>
  
              <div class="col-12 col-md-4 m5-1 ms-5 ">
                     
                        
                <th class="h5 ">ORDER SUMMARY</th>
               {{#each cartItems.products}}
